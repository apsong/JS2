#! /usr/bin/sh

for SRC in `ls *001.datadesign`; do
    DST=`echo $SRC | sed -e 's/001/1/'`
    echo sed -e 's/localhost/birt01-win/g' -e 's@tpch_sf_001/tpch_sf_1@g' $SRC ">" $DST
    sed -e 's/localhost/birt01-win/g' -e 's/tpch_sf_001/tpch_sf_1/g' $SRC > $DST

    DST=`echo $SRC | sed -e 's/001/100/'`
    echo sed -e 's/localhost/birt01-win/g' -e 's@tpch_sf_001/tpch_sf_100@g' $SRC ">" $DST
    sed -e 's/localhost/birt01-win/g' -e 's/tpch_sf_001/tpch_sf_100/g' $SRC > $DST
done
