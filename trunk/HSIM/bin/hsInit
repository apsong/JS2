#mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/Transient/20-customer25x100r-nogroup/{1,7}.6t

mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/IV/IV/9.3t.6t

mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/BRS/BRS/6.3t.6t


mkdir -p -v	$YYMMDD@$HOST/iServer/IV/IV/6.5t.10t

mkdir -p -v	$YYMMDD@$HOST/iServer/BRS/BRS/6.5t.10t

mkdir -p -v	$YYMMDD@$HOST/iServer/SV

mkdir -p -v	$YYMMDD@$HOST/iServer/Transient/SampleBIRTReport/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/iServer/Transient/rpt1/{1,6}.6t

mkdir -p -v	$YYMMDD@$HOST/iServer/LDS/A1_SUM_M_x{1,100}/{1,14}.6t
mkdir -p -v	$YYMMDD@$HOST/iServer/LDS/A2_COUNT_D_x{1,100}/{1,14}.6t
