#mkdir -p -v	$YYMMDD@$HOST/iServer/LDS/C4_FILTER_Some_NoSummary_x{1,100}/{1,14}.6t
mkdir -p -v	$YYMMDD@$HOST/iServer/LDS/M1_Simple_xTab_x{1,100}/{1,14}.6t
