#! /bin/sh

PROGRAM=`basename $0`
usage()
{
    echo 1>&2 "Usage: $PROGRAM YYMMDD HOST [-f]"
    echo 1>&2 "       $PROGRAM 121207 sha-perf     --Initialize new directory 121207@sha-perf"
    echo 1>&2 "       $PROGRAM 121207 sha-perf -f  --Reinitialize directory 121207@sha-perf"
}

while [ $# -gt 0 ]; do
    case "$1" in
        [0-9][0-9][0-9][0-9][0-9][0-9]) YYMMDD="$1";;
        [a-zA-Z]*) HOST="$1";;
        [0-9][0-9][0-9][0-9][0-9][0-9]@[a-zA-Z]*)
            YYMMDD=`echo $1 | sed -e 's/@.*$//'`
            HOST=`echo $1 | sed -e 's/^.*@//' -e 's@/*$@@'`
            ;;
        -f) OVERRIDE=1;;
        --help) usage; exit 0;;
        *) echo 1>&2 "Error: Invalid option '$1'"; usage; exit 1;;
    esac
    shift
done

[ -n "$YYMMDD" ] || { echo 1>&2 "Error: YYMMDD is not set!"; usage; exit 2;}
[ -n "$HOST" ] || { echo 1>&2 "Error: HOST is not set!"; usage; exit 2;}
[ -d "$YYMMDD@$HOST" -a -z "$OVERRIDE" ] && { echo 1>&2 "Error: '$YYMMDD@$HOST' already exists. Remove it first, or use option '-f' if need reinit."; exit 3;}

mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/10.CrosstabSampleRevenue#html/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/11.CustomerDashboard#html/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/12.CustomerOrderHistory#html/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/13.SalesbyCustomer#html/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/14.SalesbyTerritory#html/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/15.Top5SalesPerformers#html/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/16.20-customer25x100r-nogroup#html/{1,7}.6t

mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/20.CrosstabSampleRevenue#pdf/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/21.CustomerDashboard#pdf/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/22.CustomerOrderHistory#pdf/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/23.SalesbyCustomer#pdf/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/24.SalesbyTerritory#pdf/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/25.Top5SalesPerformers#pdf/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/26.20-customer25x100r-nogroup#pdf/{1,4}.6t

mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/30.CustomerDashboard#doc/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/31.CustomerDashboard#docx/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/32.CustomerDashboard#xls/{1,5}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/33.CustomerDashboard#xlsx/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/34.CustomerDashboard#ppt/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/35.CustomerDashboard#pptx/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/36.CustomerDashboard#ps/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/37.CustomerDashboard#xhtml/{1,6}.6t

mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/40.20-customer25x100r-nogroup#doc/1.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/41.20-customer25x100r-nogroup#docx/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/42.20-customer25x100r-nogroup#xls/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/43.20-customer25x100r-nogroup#xlsx/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/44.20-customer25x100r-nogroup#ppt/{1,7}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/45.20-customer25x100r-nogroup#pptx/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/46.20-customer25x100r-nogroup#ps/{1,4}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/SV/47.20-customer25x100r-nogroup#xhtml/{1,5}.6t

mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/Transient/CrosstabSampleRevenue/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/Transient/CustomerDashboard/{1,6}.6t
mkdir -p -v	$YYMMDD@$HOST/AJC$YYMMDD/Transient/CustomerOrderHistory/{1,6}.6t
